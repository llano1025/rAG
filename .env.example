# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="RAG Document Processing API"
VERSION="1.0.0"
DEBUG=false
HOST="0.0.0.0"
PORT=8000
ENVIRONMENT="production"  # development, production, testing

# Security Settings (REQUIRED)
SECRET_KEY="your-super-secret-key-at-least-32-characters-long-change-this-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY="your-encryption-key-for-sensitive-data"

# CORS and Host Settings
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"
TRUSTED_HOSTS="localhost,yourdomain.com"

# Database Settings
DATABASE_URL="postgresql://user:password@localhost:5432/rag_db"

# Redis Settings
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_TTL=3600

# Vector Database (Qdrant) Settings
QDRANT_HOST="localhost"
QDRANT_PORT=6333
QDRANT_API_KEY=""
QDRANT_COLLECTION_NAME="documents"
USE_EMBEDDED_FALLBACKS=true

# LLM Provider Settings
# ============================================

# OpenAI GPT Models
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4o-2024-08-06"  # Options: gpt-4o-2024-08-06, gpt-4.1-2025-04-14, o4-mini-2025-04-16, o3-2025-04-16
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7
OPENAI_TOP_P=1.0

# Google Gemini Models  
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key-here"
GEMINI_MODEL="gemini-2.5-flash"  # Options: gemini-2.5-pro, gemini-2.5-flash
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7
GEMINI_TOP_P=0.95

# Anthropic Claude Models
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key-here"
ANTHROPIC_MODEL="claude-sonnet-4-20250514"  # Options: claude-sonnet-4-20250514, claude-3-5-haiku-latest, claude-opus-4-20250514
ANTHROPIC_MAX_TOKENS=8192
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_TOP_P=1.0

# Ollama (Local LLM)
# Install from: https://ollama.ai/
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3.1"  # Options: llama3.1, llama2, mistral, codellama, phi3, qwen2.5, gemma2

# LM Studio (Local LLM)
# Download from: https://lmstudio.ai/
LMSTUDIO_BASE_URL="http://localhost:1234"
LMSTUDIO_MODEL="local-model"  # Use the model name from your LM Studio setup

# Embedding Settings
EMBEDDING_MODEL="sentence-transformers/all-mpnet-base-v2"
EMBEDDING_DIMENSION=768
BATCH_SIZE=32

# Document Processing Settings
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=".pdf,.docx,.txt,.md,.html,.json,.csv"
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# OCR Settings
OCR_ENABLED=true
OCR_LANGUAGE="eng"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring and Logging
LOG_LEVEL="INFO"
ENABLE_METRICS=true
METRICS_PORT=9090

# File Storage
UPLOAD_DIRECTORY="./uploads"
TEMP_DIRECTORY="./temp"

# Audit and Security
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH="./logs/audit.log"
PII_DETECTION_ENABLED=true

# Worker Settings
WORKER_CONCURRENCY=4
BACKGROUND_TASK_TIMEOUT=300

# Phase 7: Performance Configuration
BATCH_PROCESSOR_MAX_WORKERS=10
BATCH_PROCESSOR_MAX_MEMORY_MB=1024
BATCH_PROCESSOR_DEFAULT_BATCH_SIZE=50

# Query Optimization Configuration
QUERY_CACHE_TTL_SECONDS=3600
QUERY_CACHE_MAX_SIZE_MB=500
ENABLE_QUERY_PLANNING=true

# Load Balancer Configuration
LOAD_BALANCER_STRATEGY="adaptive"
LOAD_BALANCER_HEALTH_CHECK_INTERVAL=30
ENABLE_CIRCUIT_BREAKER=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5

# Async Processing Configuration
ASYNC_WORKER_POOL_MAX_WORKERS=10
ASYNC_WORKER_POOL_QUEUE_SIZE=1000
ENABLE_AUTO_SCALING=true

# Phase 8: Monitoring Configuration
USAGE_STATISTICS_ENABLED=true
USAGE_STATS_FLUSH_INTERVAL=300
USAGE_STATS_MAX_EVENTS=10000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DIRECTORY="backups"
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_SCHEDULE_DAILY="0 2 * * *"

# Alert Configuration
ALERTS_ENABLED=true
ALERT_EMAIL_SMTP_HOST="localhost"
ALERT_EMAIL_FROM="alerts@rag-system.com"
ALERT_WEBHOOK_URL=""
ALERT_SLACK_WEBHOOK_URL=""

# Dashboard Configuration
DASHBOARD_ENABLED=true
DASHBOARD_REFRESH_INTERVAL=30
DASHBOARD_MAX_HISTORY=100
DASHBOARD_THEME="auto"

# Export Configuration
EXPORT_DIRECTORY="exports"
EXPORT_MAX_FILE_SIZE_MB=500
EXPORT_COMPRESSION_DEFAULT=true

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"